{
  "name": "bootstrap-4-css-customization",
  "version": "1.0.0",
  "description": "Bootstrap 4 CSS customization tutorial",
  "scripts": {
    "build": "npm-run-all mkdirs cpimg html css",
    "clean": "del-cli -f site",
    "start": "node cmd/devserver.js",
    "cpimg": "cpy \"src/img/*\" \"site/img/\"",
    "mkdirs": "make-dir site/en site/css site/img",
    "html": "npm-run-all html-*",
    "html-index": "pug --out site src/pug/index.pug",
    "html-en-index": "pug --out site/en src/pug/en/index.pug",
    "html-en-howto": "pug --out site/en src/pug/en/howto.pug",
    "html-en-partials": "pug --out site/en src/pug/en/partials.pug",
    "html-en-variables": "pug --out site/en src/pug/en/variables.pug",
    "html-en-mixins": "pug --out site/en src/pug/en/mixins.pug",
    "html-en-gradient+shadow": "pug --out site/en src/pug/en/gradient+shadow.pug",
    "html-ja-index": "pug --out site/ja src/pug/ja/index.pug",
    "html-ja-howto": "pug --out site/ja src/pug/ja/howto.pug",
    "html-ja-partials": "pug --out site/ja src/pug/ja/partials.pug",
    "html-ja-variables": "pug --out site/ja src/pug/ja/variables.pug",
    "html-ja-mixins": "pug --out site/ja src/pug/ja/mixins.pug",
    "html-ja-gradient+shadow": "pug --out site/ja src/pug/ja/gradient+shadow.pug",
    "css": "npm-run-all css-*",
    "css-index": "npm-run-all sass-index post-css-index",
    "css-howto": "npm-run-all sass-howto post-css-howto",
    "css-partials": "npm-run-all sass-partials post-css-partials",
    "css-variables": "npm-run-all sass-variables post-css-variables",
    "css-mixins": "npm-run-all sass-mixins post-css-mixins",
    "css-gradient+shadow": "npm-run-all sass-gradient+shadow post-css-gradient+shadow",
    "sass-index": "node-sass --include-path node_modules -o site/css src/scss/index.scss",
    "sass-howto": "node-sass --include-path node_modules -o site/css src/scss/howto.scss",
    "sass-partials": "node-sass --include-path node_modules -o site/css src/scss/partials.scss",
    "sass-variables": "node-sass --include-path node_modules -o site/css src/scss/variables.scss",
    "sass-mixins": "node-sass --include-path node_modules -o site/css src/scss/mixins.scss",
    "sass-gradient+shadow": "node-sass --include-path node_modules -o site/css src/scss/gradient+shadow.scss",
    "post-css-index": "postcss --replace site/css/index.css",
    "post-css-howto": "postcss --replace site/css/howto.css",
    "post-css-partials": "postcss --replace site/css/partials.css",
    "post-css-variables": "postcss --replace site/css/variables.css",
    "post-css-mixins": "postcss --replace site/css/mixins.css",
    "post-css-gradient+shadow": "postcss --replace site/css/gradient+shadow.css",
    "help-pug": "pug --help",
    "help-sass": "node-sass --help",
    "help-postcss": "postcss --help",
    "help-make-dir": "make-dir --help"
  },
  "keywords": [
    "Bootstrap",
    "CSS"
  ],
  "author": "Yuji Miyane",
  "license": "ISC",
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "devDependencies": {
    "autoprefixer": "^9.4.6",
    "bootstrap": "^4.2.1",
    "cpy-cli": "^2.0.0",
    "csswring": "^7.0.0",
    "del-cli": "^1.1.0",
    "make-dir-cli": "^1.0.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1",
    "pug-cli": "^1.0.0-alpha6"
  }
}
